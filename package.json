{
  "name": "@uttori/search-provider-lunr",
  "version": "4.1.1",
  "description": "Uttori search provider powered by Lunr.",
  "author": "Matthew Callis <matthew.callis@gmail.com>",
  "contributors": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uttori/uttori-search-provider-lunr.git"
  },
  "bugs": {
    "url": "https://github.com/uttori/uttori-search-provider-lunr/issues"
  },
  "homepage": "https://github.com/uttori/uttori-search-provider-lunr",
  "keywords": [
    "uttori",
    "search",
    "lunr"
  ],
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@uttori/event-dispatcher": "^3.0.2",
    "lunr": "^2.3.9",
    "lunr-languages": "^1.14.0"
  },
  "optionalDependencies": {
    "debug": "^4.4.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@types/lunr": "^2.3.7",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@uttori/storage-provider-json-memory": "^5.0.0",
    "@uttori/wiki": "^6.1.3",
    "ava": "^6.4.1",
    "c8": "^10.1.3",
    "eslint": "^9.34.0",
    "eslint-plugin-anti-trojan-source": "^1.1.1",
    "eslint-plugin-ava": "^15.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^54.1.1",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-no-inferred-method-name": "^2.0.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-xss": "^0.1.12",
    "jsdoc": "^4.0.4",
    "jsdoc-to-markdown": "^9.1.2",
    "jsdoc-tsimport-plugin": "^1.0.5",
    "pre-commit": "^1.2.2",
    "release-it": "^19.0.4",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist/*",
    "src/*"
  ],
  "module": "src/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./src/index.js"
    },
    "./plugin": {
      "import": "./src/plugin.js"
    },
    "./search-lunr": {
      "import": "./src/search-lunr.js"
    }
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "concurrency": 1,
    "failFast": false,
    "tap": false,
    "verbose": true
  },
  "c8": {
    "clean": true,
    "per-file": true,
    "check-coverage": false,
    "include": [
      "src/**/*.js"
    ],
    "exclude": []
  },
  "release-it": {
    "github": {
      "release": true
    }
  },
  "scripts": {
    "docs": "jsdoc2md --configure ./jsdoc.conf.json --private --example-lang js --template rm.hbs src/search-lunr.js > README.md; jsdoc2md --configure ./jsdoc.conf.json --private --example-lang js src/search-lunr.js > docs/search-lunr.md; jsdoc2md --configure ./jsdoc.conf.json --private --example-lang js src/plugin.js > docs/plugin.md",
    "lint": "eslint .",
    "make-types": "tsc --module nodenext --project ./tsconfig.json",
    "release": "release-it",
    "test": "NODE_ENV=test c8 ava",
    "test-debug": "DEBUG=Uttori* NODE_ENV=test c8 ava --serial --concurrency=1",
    "validate": "npm ls"
  },
  "directories": {
    "test": "test"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
